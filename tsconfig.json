{
  "compilerOptions": {
    "newLine": "LF",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "esnext",
    "baseUrl": ".",
    "noEmit": true
  },
  "exclude": ["**/node_modules", "**/.*/", "**/*sample*", "**/*session*"],
  "include": ["./**/*.mjs", "./**/*.js", "./**/*.d.ts"]
}
